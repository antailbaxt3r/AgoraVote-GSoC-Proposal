<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".profile.ProfileActivity"
    >
  <data>
    <variable
        name="viewModel"
        type="org.aossie.agoraandroid.profile.ProfileViewModel"
        />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/profile_bg"
      >

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_arrow_enlarged"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway_bold"
        android:text="PROFILE"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:cropToPadding="true"
        android:src="@drawable/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

      <TextView
          android:id="@+id/profile_username"
          android:layout_width="match_parent"
          android:layout_marginStart="5dp"
          android:layout_marginEnd="5dp"
          android:textAlignment="center"
          android:gravity="center"
          android:layout_height="wrap_content"
          android:fontFamily="@font/raleway_bold"
          android:text="@{ viewModel.userName }"
          android:textColor="@color/white"
          android:textSize="30sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/logo"
          />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_username">

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/first_name_til"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:background="@drawable/edittext_bg"
          android:layout_margin="5dp"
          android:padding="0dp"
          android:layout_weight="1">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_name_first"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@{ viewModel.firstName }"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/last_name_til"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:background="@drawable/edittext_bg"
          android:padding="2dp"
          android:layout_margin="5dp"
          android:layout_weight="1">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_name_last"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:fontFamily="@font/raleway_bold"
            android:background="@null"
            android:layout_margin="10dp"
            android:text="@{viewModel.lastName}"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
      </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/about_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="22dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/raleway_bold"
        android:text="About Me"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/profile_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="22dp"
        android:fontFamily="@font/raleway_reg"
        android:text=""
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_me"
        android:background="@drawable/edittext_bg"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="22dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_me"
        />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="22dp"
        android:fontFamily="@font/raleway_reg"
        android:text="@{viewModel.email}"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        />

    <ImageView
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="30dp"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>