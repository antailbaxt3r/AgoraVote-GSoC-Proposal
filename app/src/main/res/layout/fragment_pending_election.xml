<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".displayelections.fragments.PendingElectionsFragment"
  >

  <androidx.recyclerview.widget.RecyclerView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_pending_elections"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    tools:item_layout="@layout/list_item_election_details"
    />

  <TextView
    android:id="@+id/no_id_list"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Looks like there are no elections\nto see here!"
    android:layout_margin="50dp"
    android:textAlignment="center"
    android:gravity="center"
    android:fontFamily="@font/raleway_reg"
    android:textSize="18sp"/>
</FrameLayout>